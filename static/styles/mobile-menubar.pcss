.mobile-menubar {
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  padding: 0.5rem 1rem;
  background: rgba(0, 0, 0, 0.51);
  backdrop-filter: blur(10px);

  @media (--sidebar-visible) {
    display: none;
  }

  @media print {
    display: none;
  }

  & button {
    margin: 0;
  }
}
